<%- include('partials/header') -%>

<main class="container flex flex-col items-center p-10 border-white">
  <div class="flex flex-col items-center">
    <section class="flex flex-col items-center">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
      <div class="text-2xl">Login to IvenAsk!</div>
      <form action="/login" method="POST" class="mt-5">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"
            >Email address</label
          >
          <input
            type="email"
            class="input input-bordered input-info w-full"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input
            type="password"
            class="input input-bordered input-info w-full"
            id="exampleInputPassword1"
            name="password"
          />
        </div>
        <button type="submit" class="btn btn-active btn-accent w-full">
          Submit
        </button>
      </form>
      <div class="mt-2">
        Don't have an account?
        <span class="underline text-[#198f85]"
          ><a href="/login">Signup</a></span
        >
      </div>
    </section>
  </div>
</main>

<%- include('partials/footer') -%>
