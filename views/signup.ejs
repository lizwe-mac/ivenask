<%- include('partials/header') -%>
<main class="container flex flex-col items-center p-10">
  <div class="">
    <section class="flex flex-col items-center">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class=""><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class=""><%= el.msg %></div>
      <% }) %> <% } %>
      <div class="text-2xl">Sign up to IvenAsk!</div>
      <form action="/signup" method="POST" class="mt-5">
        <div class="mb-3">
          <label for="userName" class="form-label">User Name</label>
          <input
            type="text"
            class="input input-bordered input-info w-full"
            id="userName"
            name="userName"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"
            >Email address (Use a burner email if necessary)</label
          >
          <input
            type="email"
            class="input input-bordered input-info w-full"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
          <div id="emailHelp" class="form-text">
            (We'll never share your email with anyone else.)
          </div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="input input-bordered input-info w-full"
            id="password"
            name="password"
          />
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="form-label"
            >Confirm Password</label
          >
          <input
            type="password"
            class="input input-bordered input-info w-full"
            id="confirmPassword"
            name="confirmPassword"
          />
        </div>
        <button type="submit" class="btn btn-active btn-accent w-full">
          LOGIN
        </button>
      </form>
      <div class="mt-2">
        Already have an account?
        <span class="underline text-[#198f85]"><a href="/login">Login</a></span>
      </div>
    </section>
  </div>
</main>

<%- include('partials/footer') -%>
