<%- include('partials/header') -%>
<div class="container p-10">
  <div class="flex flex-col items-center">
      <div class="flex flex-row-reverse align items-start justify-center gap-10 w-full max-w-2xl">
          <!-- <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div> -->
          <div class="mt-5 flex flex-col gap-5 mt-5">
            <h1 class="text-center mt-5 text-2xl font-medium">Profile Information</h1>
            <div class="flex items-start gap-4">
              <div class="fa fa-user text-6xl border-[1px] p-4 border-white rounded"></div>
              <div>
                <h3 class="text-xl">Username: <span><%= user.userName %></span></h3>
                <h3 class="text-xl">Email: <span><%= user.email %></span></h3>
                <h3 class="text-xl">No. of Post: <span>20</span></h3> <!-- todo: Calc number of posts -->
                <h3 class="text-xl">Stars: <span>100</span></h3> <!-- todo Calc stars-->
              </div>
            </div>
            <div class="flex items-center gap-2 justify-evenly w-full">
              <button class="btn btn-outline btn-info btn-sm" href="/feed">Create a Post</button>
            <button class="btn btn-outline btn-success btn-sm" href="/feed">Return to Feed</button>
            </div>
            
          </div>
      </div>
      <div class="flex flex-col item-center">
        <div class="text-2xl mt-5 mb-5 text-center font-medium">Your Recent Posts</div>
        <ul class="grid gap-4 grid-cols-2 list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid max-w-[10rem] overflow-hidden" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        
          
         
      </div>  
    </div>
  </div>
</div>

    <script defer>
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .catch( error => {
                console.error( error );
            } );
      </script>

<%- include('partials/footer') -%>