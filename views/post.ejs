    <div class="mt-5">
      <h2>Add a comment</h2>
      <form action="/comment/createComment/<%= post.id %>" method="POST">
        <div class="mb-3">
          <!-- <label for="comment" class="form-label">Comment</label>
          <textarea
            type="text"
            class="form-control"
            id="comment"
            name="comment"
          ></textarea> -->
          <textarea
            id="comment-editor"
            type="text"
            placeholder="Submit comment, suggestion, query..."
            class="input input-bordered input-info w-full max-w-xs mt-3"
            name="comment"
          ></textarea>
        </div>

        <button type="submit" class="btn btn-primary" value="Upload">
          Submit
        </button>
      </form>
    </div>
    <div class="mt-5">
      <ul>
        <% comments.forEach(comment =>{%>
        <li style="list-style: none">
          <h6>
            <%= user.userName.charAt(0).toUpperCase() + user.userName.slice(1)
            %>
          </h6>
          <div id="old-comment" style=""><%- comment.comment %></div>
        </li>
        <hr />

        <%}) %>
      </ul>
    </div>
    <div class="text-sm mt-5">
      <a class="btn btn-outline btn-info" href="/profile">Return to Profile</a>
      <a class="btn btn-outline btn-info" href="/">Return to Feed</a>
    </div>
  </div>
</div>
<script defer>
  ClassicEditor.create(document.querySelector("#comment-editor")).catch(
    (error) => {
      console.error(error);
    }
  );
</script>

